<div class="row">

<div class="col-md-2"></div>
<div class="col-md-2"><%=link_to '新建', new_err_code_path(:id) %></div>

</div>
<% @ErrCodes.each do |b| %>
<div class="row">
    <div class="col-md-1"><%= b.err_code%></div>
    <div class="col-md-1"><%= b.module_name%></div>
    <div class="col-md-4"><%= b.desc %></div>
    <div class="col-md-2"><%= link_to '编辑',edit_err_code_path(:id) %></div>
    <div class="col-md-2">
    <%= link_to '删除', err_code_path(:id), method: :delete, data: { confirm: '确定删除?' } %>
    </div>
    
</div>
<% end %>
<%= paginate @ErrCodes %>